(define (update-f-plus-minus-common-scores state)
  (let* ((factors (store->factors (mcmc-state->store state)))
         (dummy (display 'in-update-f-plus-minus))
         (dummy (display (store->diff-factors (mcmc-state->store state))))
         (old-f-plus-minus-common (store->diff-factors (mcmc-state->store state)))
         (dummy (display 'old-f-plus-minus-common))
         (dummy (display old-f-plus-minus-common))
         (old-f-plus (first old-f-plus-minus-common))
         (old-f-minus (second old-f-plus-minus-common))
         (old-f-common (third old-f-plus-minus-common))
         )
         (
          let loop (
                    (rest-f-plus old-f-plus)
                    (rest-f-minus old-f-minus)
                    (rest-f-common old-f-common)
                    (new-f-plus '())
                    (new-f-minus '())
                    (new-f-common '())
                    )
           (
            if (and (null? rest-f-plus) (null? rest-f-minus) (null? rest-f-common))
             (list new-f-plus new-f-minus new-f-common)
             (let*
               (
                (curr-f-plus (if (null? rest-f-plus) '() (car rest-f-plus)))
                (curr-f-minus (if (null? rest-f-minus) '() (car rest-f-minus)))
                (curr-f-common (if (null? rest-f-common) '() (car rest-f-common)))
                 (dummy (display 'in-update-f-plus-minus-loop))
