(define (get-larj-score state1state2 temp)
  (let* (
         (state1 (first state1state2))
         (state2 (second state1state2))
         (dummy0 'in-get-larj-score-state1)
         (dummy1 state1)
         (dummy2 'in-get-larj-score-state2)
         (dummy3 state2)
         (void1 (update-f-plus-minus-common-scores state1))
         (void2 (update-f-plus-minus-common-scores state2))
         (diff-factors (store->diff-factors (mcmc-state->store state2)))
         (f-plus (first diff-factors))
         (f-minus (second diff-factors))
         (f-common (third diff-factors))
         (f-plus-score (* (apply + (map factor-value f-plus)) temp))
         (f-minus-score (* (apply + (map factor-value f-minus)) (- 1.0 temp)))
         (f-common-score (* (apply + (map factor-value f-common)) 0.0))
           )
        (+ f-plus-score f-minus-score f-common-score))
  )

(define (do-larj-anneal-correction original-state jumped-state normal-form-proc num-temps static-proposal)
  (let loop (
             (total-correction 0)
             (temp-list (iota num-temps 1.0 (- (/ 1.0 num-temps))))
             (curr-state (list original-state jumped-state))
             )
        (if (= '() temp-list)
            (list (second curr-state) total-correction)
            (let* (
                   (dummytemp (display 'temp-list))
                   (dummytemp1 (display temp-list))
                   (dummy000 (display 'tries-to-do-anneal))
                   (dummy1 (display 'tries-to-do-anneal-original-state))
                   (dummy2 (display original-state))
                   (dummy1 (display 'tries-to-do-anneal-jumped-state))
                   (dummy2 (display jumped-state))
                   (dummy1 (display 'tries-to-do-anneal-curr-state))
                   (dummy2 (display curr-state))
                   (bw/fw-and-next-state (static-proposal curr-state))
                   (dummy00 (display 'bw/fw-and-next-state))
                   (dummy01 (display bw/fw-and-next-state))
                   (bw/fw (first bw/fw-and-next-state))
                   (next-state (second bw/fw-and-next-state))
                   (dummy30 (display 'tries-to-get-larj-score-curr-state))
                   (next-prev-score (get-larj-score curr-state (car temp-list)))
                   (dummy10 (display 'next-prev-score))
                   (dummy11 (display next-prev-score))
                   (dummy40 (display 'tries-to-get-larj-score-next-state))
                   (next-curr-score (get-larj-score next-state (car temp-list)))
                   (dummy20 (display 'next-curr-score))
                   (dummy21 (display next-curr-score))
                   (accept (log-flip* (min 0.0 (+ (- next-curr-score next-prev-score) bw/fw))))
                   )
              (begin
              (display 'in-larj-static-kernel-accept==)
              (display accept)
              ( if accept
                 (loop (+ total-correction (- next-prev-score next-curr-score)) (cdr temp-list) next-state)
                 (loop total-correction (cdr temp-list) curr-state)
               )
              )
            )
         )
   )
  )

